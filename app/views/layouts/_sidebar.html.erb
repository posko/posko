<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "AdminLTE/user1-128x128.jpg", class:"img-circle", alt:"User Image" %>
        <!-- <img src="assets/AdminLTE/user.png" class="img-circle" alt="User Image"> -->
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
              <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
              </button>
            </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MAIN NAVIGATION</li>

      <li class="<%= params["controller"] == "pages" and params["action"] == "dashboard" ? "active" : ""%>">
        <a href="<%= dashboard_path %>">
          <i class="fa fa-dashboard"></i>
          <span> Dashboard </span>
        </a>
      </li>
      <li class="<%= params["controller"] == "users" ? "active" : ""%>">
        <a href="<%= users_path %>">
          <i class="fa fa-users"></i>
          <span> Users </span>
        </a>
      </li>
      <li class="<%= params["controller"] == "products" ? "active" : ""%>">
        <a href="<%= products_path %>">
          <i class="fa fa-circle"></i>
          <span> Products </span>
        </a>
      </li>
      <li class="<%= params["controller"] == "customers" ? "active" : ""%>">
        <a href="<%= customers_path %>">
          <i class="fa fa-users"></i>
          <span> Customers </span>
        </a>
      </li>
      <li class="<%= params["controller"] == "invoices" ? "active" : ""%>">
        <a href="<%= invoices_path %>">
          <i class="fa fa-briefcase"></i>
          <span> Invoices </span>
        </a>
      </li>
      <li class="<%= params["controller"] == "roles" ? "active" : ""%>">
        <a href="<%= roles_path %>">
          <i class="fa fa-circle"></i>
          <span> Roles </span>
        </a>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>

<div class="control-sidebar-bg"></div>

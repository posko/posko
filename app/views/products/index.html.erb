<section class="content-header">
</section>
<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Product</h3>
      <div class="box-tools pull-right">
        <div class="btn-group">
          <%= link_to "Import", import_modal_products_path, remote: true, class: "btn btn-sm" %>
          <%= link_to "Export", products_path(format: :csv), class: "btn btn-sm" %>
          <%= link_to "Add Product", new_product_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="">
        <table class="table" id="products-table" >
          <thead>
            <tr>
              <th> Title </th>
              <th> Type </th>
              <th> Status </th>
              <th> Actions </th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.title %></td>
                <td><%= product.product_type.humanize %> </td>
                <td><%= product.status.humanize %> </td>
                <td><%= render "actions", product: product %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
